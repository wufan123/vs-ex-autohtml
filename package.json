{
  "name": "vs-ex-autohtml",
  "displayName": "autohtml",
  "description": "autohtml",
  "version": "0.0.1",
  "publisher": "waslong",
  "icon": "media/logo.png",
  "license": "MIT",
  "repository": "https://github.com/wufan123/vs-ex-autohtml",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vs-ex-autohtml.getTheTemplate",
        "title": "%getTheTemplate%"
      },
      {
        "command": "vs-ex-autohtml.refactorPage",
        "title": "%refactorPage%"
      },
      {
        "command": "vs-ex-autohtml.refactorModule",
        "title": "%refactorModule%"
      },
      {
        "command": "vs-ex-autohtml.refactorResources",
        "title": "%refactorResources%"
      },
      {
        "command": "vs-ex-autohtml.insertAutoHtmlComment",
        "title": "%insertAutoHtmlComment%"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "%autohtmlSettings%",
      "properties": {
        "autohtml.m01.ignore": {
          "type": "string",
          "default": ".*\\.(zip|rar)$|\\.vscode$|node_modules|\\.git$|\\.svn$|\\.hg$|\\.idea$|\\.DS_Store$|\\.vscode-test$|\\.history$|\\.history\\..*",
          "description": "%copy.ignore%"
        },
        "autohtml.m02.baseHtml": {
          "type": "string",
          "default": "base.html",
          "description": "%baseHtml.desc%"
        },
        "autohtml.m03.imagesDir": {
          "type": "string",
          "default": "images",
          "description": "%imagesDir.desc%"
        },
        "autohtml.m04.cssDir": {
          "type": "string",
          "default": "css",
          "description": "%cssDir.desc%"
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "command": "vs-ex-autohtml.getTheTemplate",
          "when": "explorerResourceIsFolder == true",
          "group": "navigation@100"
        },
        {
          "command": "vs-ex-autohtml.refactorResources",
          "when": "explorerResourceIsFolder == true",
          "group": "navigation@100"
        },
        {
          "command": "vs-ex-autohtml.refactorPage",
          "when": "explorerResourceIsFolder == false && resourceExtname == .zip",
          "group": "navigation@101"
        },
        {
          "command": "vs-ex-autohtml.refactorModule",
          "when": "explorerResourceIsFolder == false && resourceExtname == .zip",
          "group": "navigation@102"
        }
      ],
      "editor/context": [
        {
          "command": "vs-ex-autohtml.insertAutoHtmlComment",
          "group": "navigation@100"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vb": "vsce package",
    "vp": "git push github && vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.12",
    "@types/unzipper": "^0.10.11",
    "node-fetch": "^2.7.0",
    "unzipper": "0.10.11",
    "vscode-nls-i18n": "^0.2.4"
  },
  "vscode-nls-i18n": {
    "defaultLanguage": "zh-cn"
  }
}